<%- include("../includes/head")%>
</head>

<body>
 
    <%- include("../includes/left_menu")%>

    <div class="all-content-wrapper">
        <%- include("../includes/logo_top") %> 
        <div class="header-advance-area">
            <%- include("../includes/menu_top",{user:user}) %> 
            <!-- Mobile Menu start -->
           <%- include("../includes/mobile_menu") %> 
            <!-- Mobile Menu end -->

            <div class="error-pagewrap">
                <div class="error-page-int">
                    <div class="text-center custom-login">
                        <h3>Enregistrement des Notes</h3>
                        <p>veuillez a bien remplir les champs</p>
                    </div>
                    <div class="content-error">
                        <div class="hpanel">
                            <div class="panel-body">
                                <form action="/notes/postNotes"  method="POST">
                                    <input type="hidden" name="code_etudiant" value="<%= code_etudiant %>">
                                    <input type="hidden" name="code_faculte" value="<%= code_faculte %>">
                                    <input type="hidden" name="semestre" value="<%=semestre %>">
                                    <div class="row">
                                        <div class="form-group col-lg-12">
                                            <select  class="form-control" name="code_cours" required>
                                                <option value="" disabled="disabled" selected>Selectionner Cours</option>
                                        <% cours.forEach((element,index) =>{ %>

                                        <option value="<%= element.cour.code_cours %>"   ><%= element.cour.nom_cours %></option>
                                        <% }) %> 
                                       
                                       
                                    </select>
                                    <input  required type="number" placeholder="Entrer notes" class="form-control" name="note"step="any" required>
                                </div>
                                    <div class="text-center">
                                        <input type="submit" class="btn btn-primary" name="enregistrerUne" value="Enregistrer"/>
                                        <input type="reset" class="btn btn-default"/>
                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                  
                </div>   
            </div>
        </div>
    
        <%- include("../includes/footer") %> 
    </div>

  <%- include("../includes/scripts") %> 
</body>

</html>